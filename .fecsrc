{
    "files": [
        "service/**/*.js",
        "static/**/*.js",
        "common/**/*.js"
    ],
    "htmlcs": {
        "ie-edge": false,
        "viewport": false,
        "style-disabled": false,
        "img-alt": false,
        "img-width-height": false
    },
    "csshint": {
        "shorthand": false,
        "require-number": false,
        "disallow-quotes-in-url": false
    },
    "eslint": {
        "env": {
            "module": true,
            "react": true
        },
        "rules": {
            "fecs-valid-class-jsdoc": false,
            "fecs-valid-dom-style": false,
            "fecs-arrow-body-style": false,
            "fecs-valid-jsdoc": false,
            "fecs-prefer-async-await": false,
            "react/jsx-handler-names": false,
            "react/prop-types": false
        },
        "globals": {
            "webview": true
        }
    }
}
