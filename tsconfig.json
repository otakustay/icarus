{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2018",
        "noEmit": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": [
          "es2018",
          "dom"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": false,
        "noFallthroughCasesInSwitch": true,
        "keyofStringsOnly": true,
        "allowJs": true,
        "noImplicitAny": false,
        "jsx": "preserve"
    }
}
