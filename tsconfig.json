{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "output",
        "out"
    ]
}
