{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "declaration": true,
        "baseUrl": ".",
    },
    "include": [
        "packages/*/src/**/*.ts",
        "packages/*/src/**/*.tsx"
    ]
}
