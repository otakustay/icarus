{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020",
      "allowJs": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true,
      "declaration": true,
      "baseUrl": ".",
      "rootDir": "src",
      "outDir": "dist",
      "noEmit": true,
      "jsx": "react-jsx",
      "paths": {
        "@/*": ["./src/*"]
      },
    },
    "include": ["src"]
}
